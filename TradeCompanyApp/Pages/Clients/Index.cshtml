@page
@model TradeCompanyApp.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Список клиентов";
}

<h1>Список клиентов</h1>

<p>
    <a asp-page="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">посмотреть</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
